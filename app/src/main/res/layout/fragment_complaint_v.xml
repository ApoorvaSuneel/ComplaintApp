<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/plainblue"
    tools:context="com.example.user.complaintapp.ComplaintV">



         <TextView
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:text="Complaint Description"
            android:id="@+id/cv1"
             android:textSize="20dp"
             android:textStyle="bold"
             android:textColor="@color/white" />

         <Space
             android:layout_width="match_parent"
             android:layout_height="10dp"
             android:layout_below="@+id/cv1"
             android:id="@+id/space1"/>

         <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Status"
            android:id="@+id/cv13"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/space1"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/cv13"
            android:id="@+id/space2"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Priority"
            android:id="@+id/cv3"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/space2"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/cv3"
            android:id="@+id/space3"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Is_Personal"
            android:id="@+id/cv12"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/space3"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/cv12"
        android:id="@+id/space4"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Resolver"
        android:id="@+id/cv6"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/space4"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/cv6"
        android:id="@+id/space5"/>

        <TextView
            android:text="Redundant"
            android:id="@+id/cv11"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_below="@+id/space5"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/cv11"
        android:id="@+id/space6"/>

        <TextView
        android:text="Complainant"
        android:id="@+id/cv4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/space6"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/cv4"
        android:id="@+id/space7"/>

    <TextView
        android:text="Team"
        android:id="@+id/cv9"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_below="@+id/space7"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/cv9"
        android:id="@+id/space8"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b4"
        android:background="@drawable/like"
        android:layout_below="@+id/space8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b5"
        android:background="@drawable/dislike"
        android:layout_below="@+id/space8"
        android:layout_toRightOf="@+id/b4"
        android:layout_toEndOf="@+id/b4"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b2"
        android:background="@drawable/polls2"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/b3"
        android:layout_toStartOf="@+id/b3"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/b3"
        android:background="@drawable/threads"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_below="@+id/space8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
